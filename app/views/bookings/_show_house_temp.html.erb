<div class="container" style='width: 100%; float:left'>
	<h1>House Details</h1>
	<table class="table table-striped">
		<tr>
			<td> Registration ID </td>
			<td> <%= @house.regid %> </td>
		</tr>
		<tr>
			<td> City </td>
			<td> <%= @house.city %> </td>
		</tr>
		<tr>
			<td> Locality </td>
			<td> <%= @house.locality %> </td>
		</tr>
		<tr>
			<td> Address </td>
			<td> <%= @house.address %> </td>
		</tr>
		<tr>
			<td> House Type </td>
			<td> <%= @house.housetype %> </td>
		</tr>
		<tr>
			<td> Guests Accepted </td>
			<td> <%= @house.guests %> </td>
		</tr>
		<tr>
			<td> Cost Per Night </td>
			<td> <%= @house.cost %> </td>
		</tr>
	</table>
</div>