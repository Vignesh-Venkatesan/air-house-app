<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Air-House", home_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home",             home_path %></li>
          
          <% if signed_in? %>
          <li><%= link_to "Host a House",     new_house_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                History <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Booking History", bookings_booklist_path %></li>
                <li><%= link_to "Hosting History", houses_hostlist_path %></li>
              </ul>
            </li>

