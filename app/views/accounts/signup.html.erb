<% provide(:title, 'SignUp') %>
<div class='row'>
  <div class="container" style='width: 30%; float:left; margin-left: 10%'>
    <h2>Sign Up</h2>
    <p>Please fill in this form to sign up</p>

    <%= form_for(@account) do |f| %>

      <%= f.label :Name %>
      <%= f.text_field :name %>

      <%= f.label :Email %>
      <%= f.text_field :email %>

      <%= f.label :Contact_Number %>
      <%= f.text_field :ph_no %>

      <%= f.label :password %>
      <%= f.password_field :password_digest %>

      <br/>
      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>

  </div>
  <%= render 'layouts/sidepanel' %>
</div>