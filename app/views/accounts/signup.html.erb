<% provide(:title, 'SignUp') %>
<div class='row'>
  <div class="container" style='width: 30%; float:left; margin-left: 10%; margin-top: -1%'>
    <h2>Sign Up</h2>
    
    <%= form_for(@account) do |f| %>

      <%= f.label :Name %>
      <%= f.text_field :name %>

      <%= f.label :Email %>
      <%= f.text_field :email %>

      <%= f.label :Contact_Number %>
      <%= f.text_field :ph_no %>

      <%= f.label :password %>
      <%= f.password_field :password_digest %>

      <br/>
      <%= f.submit "Create my account", class: "btn btn-primary", style: "width:76.5%" %>
    <% end %>

    <button class='btn btn-lng' style='color: white; width:76.5%'> <%= link_to 'Sign up with Google+', '/auth/google' %> </button>

  </div>
  <%= render 'layouts/sidepanel' %>
</div>